@using TaskManager.Web.Controllers
@model TaskManager.Web.Models.LogInModel

@{
    ViewBag.Title = "LogIn";
}

<a href="#" class="goBack" onclick="history.go(-1); return false;">Back</a>

<form action="@Url.Action(AccountController.SignUpAction, AccountController.ControllerName, new {returnUrl = Model.ReturnUrl})" method="get" id="signupForm">
    <input type="submit" value="Sign up" name="submit_signup" class="btn" id="signupBtn">
</form>

<form class="authorization" action="@Url.Action(AccountController.LogInAction, AccountController.ControllerName)" method="post" id="myform" autocomplete="off">
    @Html.ValidationSummary(false)
    @Html.LabelFor(x => x.Username)<br>
    @Html.TextBoxFor(x => x.Username, new { @class = "textInput" })
    <br>
    @Html.LabelFor(x => x.Password)<br>
    @Html.TextBoxFor(x => x.Password, new {@class = "textInput"})
    <br><br>
    <input type="submit" value="Log in" class="btn" name="submit_authorize">
    @Html.HiddenFor(x => x.ReturnUrl)
</form>

